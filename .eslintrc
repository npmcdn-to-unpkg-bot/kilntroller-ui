{
    "ecmaFeatures" : {
        "jsx"     : true,
        "modules" : true
    },
    "env" : {
        "browser" : true,
        "node"    : true
    },
    "parser" : "babel-eslint",
    "rules"  : {
        "quotes" : [ "error", "single" ],
        "strict" : [ "error", "never"  ],
        "indent" : [ "error", 4 ],
        "react/jsx-uses-react"     : "error",
        "react/jsx-uses-vars"      : "error",
        "react/react-in-jsx-scope" : "error"
    },
    "plugins" : [
        "react"
    ]
}
